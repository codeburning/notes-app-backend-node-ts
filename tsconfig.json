{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": false,
      "forceConsistentCasingInFileNames": true,
      "strictNullChecks": true,
      "noImplicitAny": true
    },
    "include": ["src"], // which files to compile
    "exclude": ["node_modules"], // which files to skip
  }
  